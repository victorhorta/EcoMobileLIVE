    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!--  GoogleMaps API permission requirements - END -->
    
    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/GreenActionBarTheme" >
        <activity
            android:name=".Main"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
        <activity
            android:name=".DataManager"
            android:label="@string/database_name" >
        </activity>
        
        <activity
            android:name=".DataManagerMain"
            android:label="@string/database_name" >
        </activity>
        
        <activity
            android:name=".DataPlotSelect"
            android:label="@string/plot_graph_name" >
        </activity>
        
        <activity
            android:name=".DataPlot"
            android:label="@string/plot_graph_name" >
        </activity>
        
        <activity
            android:name=".DataMapSelect"
            android:label="@string/map_graph_name" >
        </activity>
        
        <activity
            android:name=".DataMap"
            android:label="@string/map_title" >
        </activity>
        
        <!-- 'collectdata' activities -->
        <activity
            android:name=".collectdata.Explorer"
            android:label="Collect data" >
        </activity>
        <activity android:name=".collectdata.DevicePicker"></activity>
        
        <!-- GoogleMaps API Key -->
         <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
